<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artboard"
    android:layout_width="394.0dp"
    android:layout_height="1000.0dp"
    android:background="@drawable/artboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/search_layer"
                android:layout_width="394.0dp"
                android:layout_height="515.0dp"
                android:background="@drawable/search_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/main_search_btn1"
                    android:text="@string/search_text"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="380.0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:background="@drawable/search_btn1"
                    android:drawableStart="@drawable/search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </Button>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorite_s_layer"
                android:layout_width="394.0dp"
                android:layout_height="485.0dp"
                android:layout_marginTop="124.5dp"
                android:background="@drawable/favorite_ss_layer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="start|top"
                    android:text="@string/favorite_text"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/color_ff000000"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/arrow_btn"
                    android:layout_width="150.4dp"
                    android:layout_height="300.7dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="110.9dp"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/draw42"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="100.5dp"
                    android:contentDescription="@string/favorite_text"
                    android:src="@drawable/draw42"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/favorite_btn1"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="87.5dp"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/draw42"
                    android:src="@drawable/boy2_main"
                    android:scaleType="fitStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/favorite_btn2"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="87.5dp"
                    android:visibility="gone"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/draw42"
                    android:src="@drawable/boy1_main"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/popular_chart_layer"
                android:layout_width="394.0dp"
                android:layout_height="1250dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/popular_chart_layer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/popular_chart"
                    android:textSize="40sp"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:background="@drawable/search_btn1"
                    android:text="@string/popular_chart"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/color_ff000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_popular_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="95.5dp">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/tuto_test_btn"
                android:text="노래듣기 사용 방법"
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_width="380.0dp"
                android:layout_height="60dp"
                android:layout_marginTop="1300dp"
                android:padding="10dp"
                android:background="@drawable/tuto_btn_tool"
                android:drawableStart="@drawable/tuto_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </Button>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="394.0dp"
        android:layout_height="126.0dp"
        android:layout_marginTop="590dp">
        <fragment
            android:id="@+id/my_fragment"
            android:name="com.example.myapplication_scroll.Player_Activity"
            android:layout_width="394.0dp"
            android:layout_height="126.0dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    </RelativeLayout>