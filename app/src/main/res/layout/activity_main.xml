<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artboard"
    android:layout_width="394.0dp"
    android:layout_height="1000.0dp"
    android:background="@drawable/artboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/search_layer"
                android:layout_width="394.0dp"
                android:layout_height="515.0dp"
                android:background="@drawable/search_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/main_search_btn1"
                    android:text="@string/search_text"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="380.0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:background="@drawable/search_btn1"
                    android:drawableStart="@drawable/search"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </Button>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorite_s_layer"
                android:layout_width="394.0dp"
                android:layout_height="485.0dp"
                android:layout_marginTop="124.5dp"
                android:background="@drawable/favorite_ss_layer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="start|top"
                    android:text="@string/favorite_text"
                    android:textColor="@color/color_ff000000"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/arrow_btn"
                    android:layout_width="150.4dp"
                    android:layout_height="300.7dp"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="110.9dp"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/draw42"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="100.5dp"
                    android:contentDescription="@string/favorite_text"
                    android:src="@drawable/draw42"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/favorite_btn1"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="87.5dp"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/draw42"
                    android:src="@drawable/boy2_main"
                    android:scaleType="fitStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/favorite_btn2"
                    android:layout_width="255.5dp"
                    android:layout_height="344.5dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="87.5dp"
                    android:visibility="gone"
                    android:contentDescription="@string/favorite_text"
                    android:background="@drawable/draw42"
                    android:src="@drawable/boy1_main"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/popular_chart_layer"
                android:layout_width="394.0dp"
                android:layout_height="1250dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/popular_chart_layer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/popular_chart"
                    android:textSize="40sp"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:background="@drawable/search_btn1"
                    android:text="@string/popular_chart"
                    android:textColor="@color/color_ff000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_popular_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="95.5dp">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
            <Button
                android:id="@+id/tuto_test_btn"
                android:text="노래듣기 사용 방법"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_width="380.0dp"
                android:layout_height="60dp"
                android:layout_marginTop="1300dp"
                android:padding="10dp"
                android:background="@drawable/tuto_btn_tool"
                android:drawableStart="@drawable/tuto_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </Button>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/player_layer"
        android:layout_width="394.0dp"
        android:layout_height="126.0dp"
        android:layout_marginTop="589dp"
        android:background="@drawable/player_layer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/player_shadow"
            android:layout_width="394.0dp"
            android:layout_height="109.5dp"
            android:layout_marginTop="5.5dp"
            android:src="@drawable/player_shadow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/Play_S_name"/>

        <RelativeLayout
            android:id="@+id/player"
            android:layout_width="394.0dp"
            android:layout_height="109.5dp"
            android:layout_marginTop="15.5dp"
            android:background="@drawable/player"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/streaming_main_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_no_color_layer"/>

            <RelativeLayout
                android:id="@+id/player_ctrl_layer"
                android:layout_width="250.5dp"
                android:layout_height="61.5dp"
                android:layout_marginStart="126.5dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/player_ctrl_layer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/player_ctrl"
                    android:layout_width="214.0dp"
                    android:layout_height="54.5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4.5dp"
                    android:background="@drawable/player_ctrl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/stream_play_stop1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="78.9dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@drawable/button_no_color_layer"
                        android:gravity="start|top"
                        android:text="@string/stream_play"
                        android:textColor="@color/color_fff63e4b"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="button"/>


                    <RelativeLayout
                        android:id="@+id/playlist_ctrl"
                        android:layout_width="187.5dp"
                        android:layout_height="44.0dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="5.5dp"
                        android:background="@drawable/playlist_ctrl"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/album_name1"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/button_no_color_layer"
                            android:gravity="start|top"
                            android:text="@string/text1"
                            android:textColor="@color/color_ff000000"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/album_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_no_color_layer"
                            android:layout_marginStart="144.5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="start|top"
                            android:text="@string/text2"
                            android:textColor="@color/color_ff090909"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/Play_S_name"
                android:layout_width="250.5dp"
                android:layout_height="51.5dp"
                android:layout_marginStart="126.5dp"
                android:layout_marginTop="1dp"
                android:text="@string/Play_S_name"
                android:background="@drawable/playlist_ctrl"
                android:textSize="22.5sp" />


            <ImageView
                android:id="@+id/image13"
                android:layout_width="109.0dp"
                android:layout_height="109.5dp"
                android:contentDescription="@string/Play_S_name"
                android:src="@drawable/image2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>