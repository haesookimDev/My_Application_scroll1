                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="161.4dp"/>
                    <ImageView
                        android:id="@+id/draw8"
                        android:layout_width="382.0dp"
                        android:layout_height="632.5dp"
