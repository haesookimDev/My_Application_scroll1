                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/trust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15.5dp"
                            android:layout_marginTop="27.5dp"
                            android:gravity="start|top"
                            android:text="@string/trust"
                            android:textColor="@color/color_ff020202"
                            android:textSize="25sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/mini_home_search_btn"
                    android:layout_width="394.0dp"
                    android:layout_height="115.0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16.5dp">
                    <Button
                        android:id="@+id/mini_search_btn"
                        android:text="@string/mini_search_text"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:layout_width="170.0dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mini_search_button"
                        android:drawableStart="@drawable/search"
                        android:paddingLeft="20dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="33.5dp">
                    </Button>
                    <Button
                        android:id="@+id/mini_home_btn"
                        android:text="@string/mini_home_text"
                        android:gravity=""
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:paddingLeft="5dp"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mini_home_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="0dp"
