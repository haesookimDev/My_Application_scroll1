                    </RelativeLayout>
                </RelativeLayout>

                <!--여기까지가 위에 부분(스크롤 위)-->

                <RelativeLayout
                    android:id="@+id/yellow_rec"
                    android:layout_width="394.0dp"
                    android:layout_height="54.0dp"
