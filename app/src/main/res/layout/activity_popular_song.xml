<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artboard"
    android:layout_width="394.0dp"
    android:layout_height="2000dp"
    android:background="@drawable/artboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/draw51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_result1">

            <RelativeLayout
                android:id="@+id/mini_home_search_btn"
                android:layout_width="394.0dp"
                android:layout_height="115.0dp"
                android:layout_marginTop="16.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/mini_search_btn"
                    android:layout_width="170.0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="33.5dp"
                    android:background="@drawable/mini_search_button"
                    android:drawableStart="@drawable/search"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/mini_search_text"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/mini_home_btn"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="33.5dp"
                    android:background="@drawable/mini_home_button"
                    android:gravity=""
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:text="@string/mini_home_text"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/draw50"
                android:layout_width="394.0dp"
                android:layout_height="1292.5dp"
                android:layout_marginTop="103.5dp">

                <RelativeLayout
                    android:id="@+id/draw49"
                    android:layout_width="372.0dp"
                    android:layout_height="1282.5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/popularchart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="27dp"
                        android:gravity="center"
                        android:text="@string/popular_chart_10"
                        android:fontFamily="@font/bmeuljirottf"
                        android:textColor="@color/color_ff000000"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/select_all_play_lay"
                        android:layout_width="274.0dp"
                        android:layout_height="63.0dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_all_play_lay">

                        <Button
                            android:id="@+id/select_play"
                            android:layout_width="121.0dp"
                            android:layout_height="45.3dp"
                            android:layout_marginStart="153dp"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="@string/select_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp"
                            android:background="@drawable/select_play_lay">
                        </Button>

                        <Button
                            android:id="@+id/all_play"
                            android:layout_width="120.6dp"
                            android:layout_height="45.3dp"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="@string/all_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp"
                            android:background="@drawable/all_play_lay">
                        </Button>
                    </RelativeLayout>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_recyclerView"
                    android:layout_width="383.0dp"
                    android:layout_height="1120.5dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="200dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1350dp"/>
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="394.0dp"
        android:layout_height="126.0dp"
        android:layout_marginTop="590dp">
        <fragment
            android:id="@+id/my_fragment"
            android:name="com.example.myapplication_scroll.Player_Activity"
            android:layout_width="394.0dp"
            android:layout_height="126.0dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>