<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artboard"
    android:layout_width="394.0dp"
    android:layout_height="2251.0dp"
    android:background="@drawable/artboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/image2"
                android:layout_width="394.0dp"
                android:layout_height="656.5dp"
                android:background="@drawable/image1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/draw64"
                    android:layout_width="394.0dp"
                    android:layout_height="656.5dp"
                    android:background="@drawable/album_bg_lay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/mini_home_search_btn"
                        android:layout_width="394.0dp"
                        android:layout_height="115.0dp"
                        android:layout_marginTop="16.5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/mini_search_btn"
                            android:layout_width="170.0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="230dp"
                            android:layout_marginTop="33.5dp"
                            android:background="@drawable/mini_search_button"
                            android:drawableStart="@drawable/search"
                            android:paddingLeft="20dp"
                            android:text="@string/mini_search_text"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="#000000"
                            android:textSize="40sp"/>

                        <Button
                            android:id="@+id/mini_home_btn"
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="33.5dp"
                            android:background="@drawable/mini_home_button"
                            android:gravity=""
                            android:paddingLeft="5dp"
                            android:text="@string/mini_home_text"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="#000000"
                            android:textSize="40sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/album_list_bg_lay"
                android:layout_width="394.0dp"
                android:layout_height="1658.5dp"
                android:layout_marginTop="444dp"
                android:background="@drawable/album_list_bg_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/albumlist_right_lay"
                    android:layout_width="24.5dp"
                    android:layout_height="1419.0dp"
                    android:layout_marginStart="369.5dp"
                    android:layout_marginTop="239.5dp"
                    android:src="@drawable/albumlist_right_lay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/album_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="239.5dp">
                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/select_all_play_lay"
                    android:layout_width="339.5dp"
                    android:layout_height="63.0dp"
                    android:layout_marginStart="27.5dp"
                    android:layout_marginTop="123dp"
                    android:background="@drawable/select_all_play_lay">


                        <Button
                            android:id="@+id/select_play"
                            android:layout_width="121.0dp"
                            android:layout_height="45.3dp"
                            android:layout_marginStart="213.5dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/select_play_lay"
                            android:text="@string/select_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/all_play"
                            android:layout_width="120.6dp"
                            android:layout_height="45.3dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/all_play_lay"
                            android:text="@string/all_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/album_info_lay"
                android:layout_width="361.0dp"
                android:layout_height="456.5dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="102dp"
                android:background="@drawable/album_info_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="196.0dp"
                    android:layout_height="197.0dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="242.5dp"
                    android:src="@drawable/boy1_kickit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/album_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55.5dp"
                    android:layout_marginTop="65.5dp"
                    android:layout_marginEnd="55.5dp"
                    android:gravity="center_horizontal|top"
                    android:text="@string/album_name1"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/color_ffffffff"
                    android:textSize="32.5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1900dp"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="394.0dp"
        android:layout_height="126.0dp"
        android:layout_marginTop="590dp">
        <fragment
            android:id="@+id/my_fragment"
            android:name="com.example.myapplication_scroll.Player_Activity"
            android:layout_width="394.0dp"
            android:layout_height="126.0dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>