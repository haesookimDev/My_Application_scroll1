<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/artboard"
    android:layout_width="394.0dp"
    android:layout_height="1168.5dp"
    android:background="@drawable/artboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/yeong_album_bg1"
                android:layout_width="394.0dp"
                android:layout_height="656.5dp"
                android:background="@drawable/yeong_album_bg1">
                <RelativeLayout
                    android:id="@+id/album_bg_lay"
                    android:layout_width="394.0dp"
                    android:layout_height="656.5dp"
                    android:background="@drawable/album_bg_lay">
                    <RelativeLayout
                        android:id="@+id/mini_home_search_btn"
                        android:layout_width="394.0dp"
                        android:layout_height="115.0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16.5dp">
                        <Button
                            android:id="@+id/mini_search_btn"
                            android:text="@string/mini_search_text"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="#000000"
                            android:textSize="40sp"
                            android:layout_width="170.0dp"
                            android:layout_height="60dp"
                            android:background="@drawable/mini_search_button"
                            android:drawableStart="@drawable/search"
                            android:paddingLeft="20dp"
                            android:layout_marginStart="230dp"
                            android:layout_marginTop="33.5dp">
                        </Button>
                        <Button
                            android:id="@+id/mini_home_btn"
                            android:text="@string/mini_home_text"
                            android:fontFamily="@font/bmeuljirottf"
                            android:gravity=""
                            android:textColor="#000000"
                            android:textSize="40sp"
                            android:paddingLeft="5dp"
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            android:background="@drawable/mini_home_button"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="33.5dp">
                        </Button>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/album_info"
                android:layout_width="394.0dp"
                android:layout_height="1118.5dp"
                android:background="@drawable/album_info_lay"
                android:layout_marginTop="50dp">
                <RelativeLayout
                    android:id="@+id/album_list_bg_lay"
                    android:layout_width="394.0dp"
                    android:layout_height="713.0dp"
                    android:layout_marginTop="405.5dp"
                    android:background="@drawable/album_list_bg_lay">
                    <ImageView
                        android:id="@+id/albumlist_right_lay"
                        android:layout_width="24.5dp"
                        android:layout_height="488.0dp"
                        android:src="@drawable/albumlist_right_lay"
                        android:layout_marginStart="369.5dp"
                        android:layout_marginTop="225dp"/>
                    <RelativeLayout
                        android:id="@+id/select_all_play_lay"
                        android:layout_width="339.5dp"
                        android:layout_height="63.0dp"
                        android:layout_marginStart="27.5dp"
                        android:layout_marginTop="123dp"
                        android:background="@drawable/select_all_play_lay">


                        <Button
                            android:id="@+id/select_play"
                            android:layout_width="121.0dp"
                            android:layout_height="45.3dp"
                            android:layout_marginStart="213.5dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/select_play_lay"
                            android:text="@string/select_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/all_play"
                            android:layout_width="120.6dp"
                            android:layout_height="45.3dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/all_play_lay"
                            android:text="@string/all_play"
                            android:fontFamily="@font/bmeuljirottf"
                            android:textColor="@color/color_ff000000"
                            android:textSize="25sp" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/song_lay"
                    android:layout_width="394.0dp"
                    android:layout_height="95.0dp"
                    android:layout_marginTop="620.5dp">

                    <Button
                        android:id="@+id/song_play_lay1"
                        android:layout_width="75.0dp"
                        android:layout_height="75.0dp"
                        android:layout_marginStart="302.5dp"
                        android:layout_marginTop="7.5dp"
                        android:text="@string/play"
                        android:fontFamily="@font/bmeuljirottf"
                        android:textSize="25sp"
                        android:background="@drawable/song_play_lay">
                    </Button>
                    <RelativeLayout
                        android:id="@+id/song_play"
                        android:layout_width="371.5dp"
                        android:layout_height="95.0dp"
                        android:background="@drawable/song_play">
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01"
                            android:gravity="start|top"
                            android:textColor="@color/color_ff121314"
                            android:textSize="25sp"
                            android:layout_marginStart="7.5dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/yeong_trust_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yeong_trust_me"
                            android:fontFamily="@font/bmeuljirottf"
                            android:gravity="start|top"
                            android:textColor="@color/color_ff000000"
                            android:textSize="30sp"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="31.5dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/album_info_lay"
                android:layout_width="361.0dp"
                android:layout_height="456.5dp"
                android:background="@drawable/album_info_lay"
                android:layout_marginStart="14dp"
                android:layout_marginTop="130.5dp">
                <ImageView
                    android:id="@+id/music1"
                    android:layout_width="196.0dp"
                    android:layout_height="193.0dp"
                    android:src="@drawable/music1"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="242.5dp"/>
                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/album_name4"
                    android:fontFamily="@font/bmeuljirottf"
                    android:gravity="center_horizontal|top"
                    android:textColor="@color/color_ffffffff"
                    android:textSize="32.5sp"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginTop="60dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="800dp"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="394.0dp"
        android:layout_height="126.0dp"
        android:layout_marginTop="590dp">
        <fragment
            android:id="@+id/my_fragment"
            android:name="com.example.myapplication_scroll.Player_Activity"
            android:layout_width="394.0dp"
            android:layout_height="126.0dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>